@model IEnumerable<Subject>
@{
    ViewData["Title"] = "Subjects";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Subject List</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Subject
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Subject Name</th>
                    <th>Description</th>
                    <th>Topics Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subject in Model)
                {
                    <tr>
                        <td>@subject.Name</td>
                        <td>@subject.Description</td>
                        <td>@subject.Topics.Count</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@subject.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-book-open"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@subject.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@subject.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <h3 class="text-muted">No subjects available.</h3>
            <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="fas fa-plus"></i> Add Your First Subject
            </a>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}