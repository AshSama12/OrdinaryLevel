@model Subject
@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@Model.Name</h1>
        @if (ViewBag.IsAdmin)
        {
            <a asp-action="Create" asp-route-subjectId="@Model.Id" class="btn btn-success">
                <i class="fas fa-plus"></i> Add New Topic
            </a>
        }
    </div>

    <div class="row">
        @foreach (var topic in Model.Topics)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="card-title mb-0">@topic.Title</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@topic.Content</p>
                    </div>
                    @if (ViewBag.IsAdmin)
                    {
                        <div class="card-footer">
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@topic.Id" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@topic.Id" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>